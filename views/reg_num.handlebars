<div class="container">

    <h1 class="Heading">Registration Numbers Web App</h1>

    <div class="examples">
        <p>e.g CA 15496, CJ 658, CY 974361 </p>
    </div>


    <form action="/reg_numbers" method="post">

        <div class="textbox">
            <input type="text" placeholder="enter reg_num" name="registration_no">

        </div>

        <br />


        <div addBtn>
            <button class="addBtn" type="submit" name="button"> Add Reg Number</button>
        </div>

        <br>

        <a href="/reset">
            <button class="resetBtn" on type="submit" name="button" value="reset">Reset
            </button>

            <div class="print_reg">
                <ul>
                    {{#each registrations}}

                    <li>
                        {{registrations}}
                    </li>

                    {{/each}}
                </ul>

            </div>

    </form>

     <form action="/reg_numbers" method="GET">
            <br>
            
             <div class="radioBtn">
            <select name="filtered" id="">
                <option value="all"> All_Towns</option>
                <option value="CA"> Cape_Town</option>
                <option value="CY"> Bellvile</option>
                <option value="CJ"> Paarl</option>


            </select>

     <div filterBtn>
            <a href="/reg_numbers">
                <button class="filterBtn" type="submit" name="button"> filter</button>
            </a>
        </div>


        </div>

        </form>

</div>